import Layout from '../layouts/EnLayout.astro';
---

<Layout title="Bruno RodrÃ­guez - Developer">
  <main class="text-center py-5 px-9">
    <h2 class="text-3xl font-bold dark:text-gray-200">Developing for the world</h2>
    <p class="text-gray-600 mt-3 dark:text-gray-400">
      I'm a full stack developer, passionate about technology.
    </p>
  </main>
  <section id="what-i-make">
    <ul class="flex flex-col items-center space-y-4 md:flex-row md:justify-center md:space-y-0 md:space-x-4">
      <li class="relative bg-emerald-600 h-80 w-80 rounded-md flex items-end p-3 text-xl font-bold text-gray-100">
        Web Apps
        <img src="/icons/smartphone.svg" class="absolute top-5 right-3 w-14"/>
      </li>
      <div class="flex flex-col justify-between space-y-4 w-80 h-80">
        <li class="relative bg-amber-500 h-40 w-80 rounded-md flex items-end p-3 text-xl font-bold text-gray-100">
          Web Pages
          <img src="/icons/layout.svg" class="absolute top-3 right-3 w-14"/>
        </li>
        <li class="relative bg-red-400 h-40 w-80 rounded-md flex items-end p-3 text-xl font-bold text-gray-100">
          UI/UX
          <img src="/icons/pen-tool.svg" class="absolute top-3 right-3 w-14"/>
        </li>
      </div>
    </ul>
  </section>
  <section id="about" class="text-center py-20 px-4 md:flex md:justify-center md:items-center md:space-x-10">
    <img src="/yo-rec.jpg" alt="photo of me" class="w-64 m-auto rounded-full md:m-0">
    <div class="md:w-80">
      <h2 class="mt-10 text-2xl font-bold leading-7 dark:text-gray-200">
        I'm Bruno, and I'd like to create solutions that make people's lives easier.
      </h2>
      <p class="my-6 text-gray-600 dark:text-gray-400">
        Software Engineer graduate of Holberton School. I have a passion for learning, and I'm always looking for new ways to improve myself.
      </p>
    </div>
  </section>
  <section id="works" class="flex flex-col items-center space-y-5">
    <h2 class="text-2xl font-bold dark:text-gray-200">Projects & Designs</h2>
    <div class="flex flex-col items-center space-y-5 md:flex-row md:space-y-0 md:space-x-5">
      <a href="projects/ahorrapp.html" class="h-96 w-96 flex flex-col items-center">
        <img src="/projects/ahorrapp.png" alt="Ahorrapp - final project Holberton" class="h-full rounded-md border">
        <h3 class="text-gray-600 dark:text-gray-400">Ahorrapp</h3>
      </a>
